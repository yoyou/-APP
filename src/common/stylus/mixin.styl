border-1px($color)
  position: relative
  &:after
    content: ' '
    position: absolute
    bottom: 0px
    left: 0px
    width: 100%
    height: 1px
    background-color: $color

bg-img($name)
  background-image: url($name + "@2x.png");

@media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
  background-image: url($name + "@3x.png");
